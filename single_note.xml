<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="50dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorPeach"

        android:layout_centerInParent="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_cardView_tv"
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_cardView_tv"
                android:text=""
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:layout_margin="5dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="@color/colorBlue"
                   android:layout_margin="5dp"
                   android:id="@+id/startDate_cardView_tv"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="@color/colorBlue"
                   android:layout_margin="5dp"
                   android:id="@+id/lastDate_cardView_tv"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="0"
                   android:textColor="@color/colorBlue"
                   android:layout_margin="5dp"
                   android:id="@+id/priority_cardView_tv"/>



           </LinearLayout>







        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>